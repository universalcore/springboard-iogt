{% extends "base.jinja2" %}
{% from "molecules/page_listing.jinja2" import page_listing_with_section %}

{% block content %}
<div>

    <div class="h1">{% trans %}Recommended{% endtrans %}</div>

    {% set pages=all_pages|recent_pages(language) %}
    {% for page in pages %}
        <div class="articles">
            {% if loop.first %}
                {{ page_listing_with_section(page, "large-listing") }}
            {% else %}
                {{ page_listing_with_section(page) }}
            {% endif %}
        </div>
    {% endfor %}
</div>
{% endblock %}
