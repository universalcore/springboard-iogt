{% extends "base.jinja2" %}
{% from "molecules/page_listing.jinja2" import page_listing_with_section %}

{% block content %}
<div>

    <div class="h1"><div class="detail">{% trans %}Recommended{% endtrans %}</div></div>

    <div class="home">
    {% set pages=all_pages|recent_pages(language) %}
    <div class="articles">
    {% for page in pages %}
        {% if loop.first %}
            {{ page_listing_with_section(page, "full-image", image_first=false) }}
        {% else %}
            {{ page_listing_with_section(page) }}
        {% endif %}
    {% endfor %}
    </div>
    </div>
</div>
{% endblock %}
